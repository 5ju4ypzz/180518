@model IEnumerable<Music.Model.EF.author>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<a href="~/Admin/Authors/Create">

    <i class="fa fa-fw fa-plus">
    </i>Thêm Tác giả
</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.author_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.author_name)
            </td>
            <td id="del">
                @Html.ActionLink(" ", "Edit", new { id = item.author_id }, new { @class = "fa fa-fw fa-edit" }) |
                @Html.ActionLink(" ", "Details", new { id = item.author_id }, new { @class = "fa fa-fw fa-info" }) |
                @Ajax.ActionLink(" ","Delete",new { id = item.author_id },new AjaxOptions {
               Confirm="Xóa "+ item.author_name+" ?",
               OnComplete="$('del').remove()",
               HttpMethod = "Delete"
           },new { @class="fa fa-fw fa-trash"})
        </tr>
    }
</table>